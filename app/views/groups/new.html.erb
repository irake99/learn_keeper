<!-- carousel -->
<%= render partial: "shared/carousel" %>
<div class="container">
  <div class="row new-row">
    <div class="col-md-7">
      <form action="" class="form-horizontal">
        <div class="form-group">
          <label class="col-lg-5 control-label">What's your new group name ?</label>
          <div class="col-lg-7">
            <input type="text" class="form-control">
          </div>
        </div>
        <div class="form-group">
          <label class="col-lg-5 control-label">What's your new group hometown ?</label>
          <div class="col-lg-7">
            <input type="text" class="form-control">
          </div>
        </div>
        <div class="form-group">
          <label class="col-lg-5 control-label">What will your group be about ?</label>
          <div class="col-lg-7">
            <input type="text" class="form-control">
          </div>
        </div>
        <div class="form-group">
          <label class="col-lg-5 control-label">Describe who should join and your group will do.</label>
          <div class="col-lg-7">
            <textarea class="form-control" id="" cols="30" rows="10"></textarea>
          </div>
        </div>
      </form>
    </div>
    <div class="col-md-5">
      <div class="text-center">
        <img src="https://via.placeholder.com/200x200" class="avatar img-thumbnail" alt="avatar">
        <h6>Upload a different photo...</h6>
        <input type="file" class="text-center center-block well well-sm">
      </div>
    </div>
    <div class="col-md-5 text-center btn-sg">
      <input class="btn btn-primary" value="Strat a Group" type="button">
    </div>
  </div>
</div>
<!-- footer -->
<%= render 'layouts/footer' %>